<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SnatchOrders.Views.AboutPage"             
             Title="Σχετικά με την εφαρμογή">
    <ContentPage.Content>
        <StackLayout Style="{StaticResource StackPadding}">
            <Label Text="Πληροφορίες"
                   Style="{StaticResource LabelsEmphasized}" />
            <Label x:Name="lblAbout"
                   Style="{StaticResource LabelsDefault}"/>
            <Label Text="info.snatchthat@gmail.com"
                   Margin="0,15,0,0"
                   TextColor="Blue"
                   TextDecorations="Underline"
                   Style="{StaticResource LabelsDefault}">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>